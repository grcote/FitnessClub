<table border="0" width="300" >

  <tr>
      <td valign="top">
      <p><font color="red">*</font>Parent - First Name
      <br><input type="text" name="parent_first_name"
            value="<%= @show_family.parent_first_name %>"/>

      <p><font color="red">*</font>Parent - Last Name
      <br><input type="text" name="parent_last_name"
            value="<%= @show_family.parent_last_name %>"/>

      <p>Chaperone - First Name
      <br><input type="text" name="chaperone_first_name"
            value="<%= @show_family.chaperone_first_name %>"/>

      <p>Chaperone - Last Name
      <br><input type="text" name="chaperone_last_name"
            value="<%= @show_family.chaperone_last_name %>"/>
      
      <br><br>
      <% if @show_family.signature == true %>
            <input type="checkbox" name="signature" checked>Permission form signed<br>
      <% else %>
            <input type="checkbox" name="signature">Permission form signed<br>
      <% end %>
      </td>

      <td valign="top">
      <p>Home Phone
      <br><input type="text" name="home_phone"
            value="<%= @show_family.home_phone %>"/>

      <p>Cell Phone
      <br><input type="text" name="cell_phone"
            value="<%= @show_family.cell_phone %>"/>
      
      <p>Work Phone
      <br><input type="text" name="work_phone"
            value="<%= @show_family.work_phone %>"/>
      
      <p>Email
      <br><input type="text" name="email"
            value="<%= @show_family.email %>"/>
      </td>
      
  </tr>

</table>
