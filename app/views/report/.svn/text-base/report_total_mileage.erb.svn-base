<h3>Total Mileage by Student</h3>
<br>

<table border="1" width="300">

    <tr>
        <th>Student Name</th>
        <th>Total Miles</th>
    </tr>

  <% for student in @students %>

    <tr>
        <td><%= student.student_last_name + ", " + student.student_first_name %></td>
        <td align="center"><%= student.total_mileage %></td>
    </tr>
  <% end %>


</table>  



